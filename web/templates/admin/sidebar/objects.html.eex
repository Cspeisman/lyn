<ul class="nav nav-pills nav-stacked nav-sidebar">
<%= for site <- @object_tree do %>
  <li class="nav-item">
    <a class="nav-link site-name <%= active_class(@conn, admin_admin_path(@conn, :edit, "sites", site.id)) %>"
       href="<%= admin_admin_path(@conn, :edit, "sites", site.id) %>"
    >
      <%= site.name %> <span class="sr-only">(current)</span>
    </a>
  </li>
  <%= for object <- site.children do %>
    <li class="nav-item">
      <a class="nav-link <%= active_class(@conn, admin_admin_path(@conn, :edit, "objects", object.id)) %>"
         href="<%= admin_admin_path(@conn, :edit, "objects", object.id) %>"
      >
        <%= object.full_path %> <span class="sr-only">(current)</span>
      </a>
    </li>
  <% end %>
  <li class="nav-item">
    <a class="nav-link <%= active_class(@conn, admin_admin_path(@conn, :new, "objects", site_id: site.id)) %>"
       href="<%= admin_admin_path(@conn, :new, "objects", site_id: site.id) %>"
    >
      <i class="fa fa-plus"></i> New Object <span class="sr-only">(current)</span>
    </a>
  </li>
  <hr />
<% end %>
</ul>
